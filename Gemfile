source :rubygems

ruby '1.9.3'

gem 'sinatra'
gem 'thin'
gem 'net-ssh'
gem 'sequel'
gem 'pg'
gem 'json'
gem 'pony', '~> 1.4'
gem 'bcrypt-ruby', :require => 'bcrypt'

group :development do
  gem 'sinatra-reloader'
  gem 'guard-livereload'
  gem 'rack-livereload'
  gem 'coffee-script'
  gem 'yui-compressor'
  gem 'uglifier'
  gem 'sass'
  gem 'compass'
  gem 'rake-pipeline'
  gem 'rake-pipeline-web-filters'
  gem 'rb-fsevent', '~> 0.9'
end

group :test do
  gem 'sqlite3'
  gem 'rspec'
  gem 'rack-test', :require => "rack/test"
end