<div class="login-box">
  <form action="login" method="post">
    <div class="field-group">
      <input type="text" class="field-text full" name="user" id="user" placeholder="Email">
    </div>
    <div class="field-group">
      <input type="password" class="field-text full" name="password" id="password" placeholder="Password">
    </div>
    <div class="field-group">
      <a class="uppercase left" href="#">I forgot my password</a>
      <input type="submit" class="button right" value="Login">
    </div>
  </form>
</div>